<%- include('layouts/header'); -%>
<body class="main">
<div class="form-container">
    <div class="form-image-container">
        <img class="form-image" src="images/headset.jpg" alt="">
    </div>
    <div class="form-product">
        <h2 style="padding-left:250px; padding-bottom: 15px;"><%= title %></h2>
        <form id="form-add" action="/addProduct?_csrf=<%=csrfToken%>" method="POST" enctype="multipart/form-data">
        <span class="error"><%= error %></span>
        <div class="form-main">
            <div class="form-group">
                <div class="form-input">
                    <div class="label">Product Name</div>
                    <input type="text" name="product_name" required>
                </div> 
                <div class="form-input">
                    <div class="label">Product Catagory</div>
                    <select id="catagory" name="product_catagory" required>
                    <option value="" disabled selected>Please choose product catagory</option>        
                    <option value="computer">Computer</option>
                    <option value="cell-phone">Cell Phones</option>
                    <option value="headphones">Headphones</option>
                    <option value="gaming">Gaming Accessories</option>
                </select>
                </div>
                <div class="form-input">
                    <div class="label">Product Brand</div>
                    <input type="text" name="product_brand" required>
                </div> 
                <div class="form-input">
                    <div class="label">Product Price</div>
                    <input type="text" name="product_price" required>
                </div> 
            </div>
            <div class="form-group-right">
                <div id="description-con">
                    <div class="label">Product Description</div>
                    <textarea class="description" id="editor" placeholder="description..." type="text" name="product_description" required></textarea> 
                </div>  
                <div class="form-input">
                    <div class="label">Product Image</div>
                    <input type="file" for="imageUpload" name="product_image" required>
                </div>        
            </div>
           
        </div>
        <input type="hidden" id="csrf" value="<%=csrfToken %>">
        <button style="margin-left:250px"class="submit" id="btn-submit" type="submit">Add Product</button>
        </form>
        <div class="goback">
            <a class="gohome" href="/"> back to Home</a>
        </div>
    </div>
</div>
<!-- Import jQuery -->
<script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>window.jQuery || document.write('<script src="js/vendor/jquery-3.3.1.min.js"><\/script>')</script>

<!-- Import Trumbowyg -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/Trumbowyg/2.20.0/trumbowyg.min.js">
</script>
</body>

</html>