<%- include('../layouts/header'); -%>
<body class="main" style="background-color: #eeeff0">
    <div class="login-container">
        <div class="login-content">
            <div class="form-title">
                <img src="images/logo3.png" alt="">
                <h3 style="font-size: 25px;">Welcome Back</h3>
            </div>
            <div class="form-con">
            <form action="/login" class="login-form" method="POST">
                <input type="email" name="user_email" id="user_email" placeholder="Email" required>
                <input type="password" name="user_pw" id="user_pw" placeholder="Password" required>
                <button class="submit" type="submit">Login</button>
                <input type="hidden" name="_csrf" value="<%=csrfToken %>">
                <div class="need-acc">
                    <p>Forget password? <a href="">Reset Password</a></p>
                    <p>Don't have an Account? <a href="/signup">SignUp</a></p>
                </div>
            </form>
            <!-- <div class="goback">
                <a class="gohome" href="/"> Back To Home</a>
            </div> -->
            </div>
        </div>
    </div>
</body>
