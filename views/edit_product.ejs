<%- include('layouts/header'); -%>
<body class="main">
<div class="form-container">
    
        <% if(edit==true){ %>
            <div style="padding: 35px; margin-top: 35px;" class="form-image-container">
            <img class="edit-form-image" src="<%= product.imageUrls %>" alt="">
        <% }else{ %>
            <div class="form-image-container">
            <img class="form-image" src="images/camera.jpg" alt="">
        <% } %>
    </div>
    <div class="edit-form-container">
        <h2 style="padding-left:235px; padding-bottom: 15px;"><%= title %></h2>
        <form action="/editProduct" method="POST" >
        <span class="error"><%= error %></span>
        <div class="form-main">
            <div class="form-group">
                <div class="form-input">
                    <div class="label">Product Name</div>
                    <input type="text" name="product_name" value="<%= product.title %>" required>
                </div> 
                <div class="form-input">
                    <div class="label">Product Catagory</div>
                    <select id="catagory" name="product_catagory" required>
                    <option value="" disabled selected>Please choose product catagory</option>        
                    <option value="computer">Computer</option>
                    <option value="cell-phone">Cell Phones</option>
                    <option value="headphones">Headphones</option>
                    <option value="gaming">Gaming Accessories</option>
                    <option value="<%= product.catagory %>" selected> <%= product.catagory %></option>
                </select>
                </div>
                <div class="form-input">
                    <div class="label">Product Brand</div>
                    <input type="text" name="product_brand" value="<%= product.brand %>" required>
                </div> 
                <div class="form-input">
                    <div class="label">Product Price</div>
                    <input type="text" name="product_price" value="<%= product.price %>"required>
                </div> 
            </div>
            <div class="form-group">
                <div class="description-con">
                    <div class="label">Product Description</div>
                    <textarea class="description" id="editor" placeholder="description..." type="text" name="product_description"  required>
                        <%= product.desp %>
                    </textarea>                     
                </div>  
                <div class="form-input">
                    <div class="label">Product Image are not able to update</div>
                    <input type="file" for="imageUpload" disabled=true name="product_image">
                </div>        
            </div>
           
        </div>
        <button class="submit" type="submit">Edit Product</button>
        <input type="hidden" name="edit_image" value="<%= product.imageUrls %>">
        <input type="hidden" name="pid" value="<%= pid %>">
        <input type="hidden" name="_csrf" value="<%=csrfToken %>">
        </form>
        <div class="goback">
            <a class="gohome" href="/"> back to Home</a>
        </div>
    </div>
</div>
<!-- Import jQuery -->
<script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>window.jQuery || document.write('<script src="js/vendor/jquery-3.3.1.min.js"><\/script>')</script>

<!-- Import Trumbowyg -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/Trumbowyg/2.20.0/trumbowyg.min.js">
</script>
</body>
<%- include('layouts/footer'); -%>